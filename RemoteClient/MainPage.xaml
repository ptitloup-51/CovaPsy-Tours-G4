<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemoteClient.MainPage">
    <VerticalStackLayout Spacing="20" Padding="20" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        
        <!-- Image -->
        <Image Source="dotnet_bot.png" HeightRequest="100" HorizontalOptions="Center"/>
        
        <!-- Boutons -->
        <HorizontalStackLayout Spacing="20" HorizontalOptions="FillAndExpand">
            <Label Text="Adresse IP"></Label>
            <Editor Placeholder="192.168.2.127" x:Name="Address" WidthRequest="100"></Editor>
            <Label Text="Port"></Label>
            <Editor Placeholder="5555" WidthRequest="100" x:Name="Port"></Editor>
            
            <Button Text="🚗 Démarrer" x:Name="Start" Clicked="Start_OnClicked"  BackgroundColor="#4CAF50" TextColor="White" CornerRadius="10" Padding="10" HorizontalOptions="FillAndExpand"/>
            <Button Text="🛑 Arrêter"  BackgroundColor="#F44336" TextColor="White" CornerRadius="10" Padding="10" HorizontalOptions="FillAndExpand"/>
            
        </HorizontalStackLayout>
        
        <!-- Télémétrie -->
        <Grid ColumnSpacing="10" RowSpacing="10" Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Frame Grid.Row="0" Grid.Column="0" CornerRadius="10" Padding="15" BackgroundColor="White" BorderColor="#DDD" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Label x:Name="TempLabel" Text="Température: -- °C" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
            </Frame>
            <Frame Grid.Row="0" Grid.Column="1" CornerRadius="10" Padding="15" BackgroundColor="White" BorderColor="#DDD" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Label x:Name="TimeLabel" Text="Heure: --:--:--" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
            </Frame>
            <Frame Grid.Row="1" Grid.Column="0" CornerRadius="10" Padding="15" BackgroundColor="White" BorderColor="#DDD" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Label x:Name="RollLabel" Text="Roulis: --°" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
            </Frame>
            <Frame Grid.Row="1" Grid.Column="1" CornerRadius="10" Padding="15" BackgroundColor="White" BorderColor="#DDD" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Label x:Name="SpeedLabel" Text="Vitesse: -- km/h" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
            </Frame>
            <Frame Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" CornerRadius="10" Padding="15" BackgroundColor="White" BorderColor="#DDD" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Label x:Name="SteeringLabel" Text="Angle direction: --°" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center"/>
            </Frame>
        </Grid>
        
    </VerticalStackLayout>

</ContentPage>
